  <servlet>
  	<servlet-name>createDatabaseServlet</servlet-name>
  	<servlet-class>org.onecloud.ocean.demo.web.servlet.CreateDatabaseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>createDatabaseServlet</servlet-name>
  	<url-pattern>/test/createdatabase</url-pattern>
  </servlet-mapping>
  
</web-app>