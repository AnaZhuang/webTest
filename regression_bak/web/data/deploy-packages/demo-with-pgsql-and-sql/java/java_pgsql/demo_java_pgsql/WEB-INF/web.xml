<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>OceanDriverUsageDemo</display-name>
  <description>Simple Web Application That Integration Ocean Driver With Java Persistence Frameworks</description>
  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>org.onecloud.ocean.demo.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- list customer -->
  <servlet>
  	<servlet-name>hibernateListCustomerServlet</servlet-name>
  	<servlet-class>org.onecloud.ocean.demo.web.servlet.ListCustomerServlet</servlet-class>
  	<init-param>
  		<param-name>framework</param-name>
  		<param-value>hibernate</param-value>
  	</init-param>
  </servlet>
  <servlet>
  	<servlet-name>mybatisListCustomerServlet</servlet-name>
  	<servlet-class>org.onecloud.ocean.demo.web.servlet.ListCustomerServlet</servlet-class>
  	<init-param>
  		<param-name>framework</param-name>
  		<param-value>mybatis</param-value>
  	</init-param>
  </servlet>
  <servlet>
  	<servlet-name>jpaListCustomerServlet</servlet-name>
  	<servlet-class>org.onecloud.ocean.demo.web.servlet.ListCustomerServlet</servlet-class>
  	<init-param>
  		<param-name>framework</param-name>
  		<param-value>jpa</param-value>
  	</init-param>
  </servlet>
  <servlet>
  	<servlet-name>jdbcListCustomerServlet</servlet-name>
  	<servlet-class>org.onecloud.ocean.demo.web.servlet.ListCustomerServlet</servlet-class>
  	<init-param>
  		<param-name>framework</param-name>
  		<param-value>jdbc</param-value>
  	</init-param>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>hibernateListCustomerServlet</servlet-name>
  	<url-pattern>/hibernate/listcustomer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>mybatisListCustomerServlet</servlet-name>
  	<url-pattern>/mybatis/listcustomer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>jpaListCustomerServlet</servlet-name>
  	<url-pattern>/jpa/listcustomer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>jdbcListCustomerServlet</servlet-name>
  	<url-pattern>/jdbc/listcustomer</url-pattern>
  </servlet-mapping>
  
